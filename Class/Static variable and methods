class Student {
 String name;                
 static String school = "ABC School";   
void display() {             
        System.out.println(name + " - " + school);
    }
    static void changeSchool() { 
        school = "XYZ School";
    }
}
class Main {
    public static void main(String[] args) {
        Student s1 = new Student();
        s1.name = "Arjun";
        Student s2 = new Student();
        s2.name = "Meera")
        s1.display();
        s2.display();
        Student.changeSchool();   
        s1.display();
        s2.display();
    }
}
